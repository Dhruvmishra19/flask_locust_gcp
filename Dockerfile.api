# Dockerfile.api

FROM python:3.10-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY app.py .

# Listen on the port that Cloud Run will provide via $PORT (defaults to 8080)
EXPOSE 8080

# Use gunicorn, binding to $PORT
CMD ["sh", "-c", "exec gunicorn app:app --bind 0.0.0.0:${PORT:-8080} --workers 2"]
